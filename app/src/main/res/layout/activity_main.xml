<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_main"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_inactive"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnToggleMonitoring"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_start_monitoring"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Recent Logs Preview Section - Wszystkie logi (monitoring + system) -->
        <TextView
            android:id="@+id/tvRecentLogsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📊 Ostatnie wydarzenia (wszystkie)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:id="@+id/scrollViewRecentLogs"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/gray_900"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/layoutRecentLogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNoLogs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_logs_yet"
                    android:textSize="14sp"
                    android:textColor="@color/gray_400"
                    android:gravity="center"
                    android:visibility="visible" />

            </LinearLayout>

        </ScrollView>

        <!-- First buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnViewLogs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_view_logs"
                android:layout_marginEnd="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <Button
                android:id="@+id/btnKeywordsTester"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🔍 Tester"
                android:layout_marginStart="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>
        
        <!-- Demo Row -->
        <Button
            android:id="@+id/btnDetectionDemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🎯 DEMO: Wielojęzyczna Detekcja Słów Kluczowych"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:backgroundTint="@color/info" />

        <!-- Second button row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnManageDevices"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Urządzenia"
                android:layout_marginEnd="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <Button
                android:id="@+id/btnViewIncidents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Incydenty"
                android:layout_marginStart="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

        <!-- Third button row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnPairDevice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_pair_device"
                android:layout_marginEnd="4dp" />

            <Button
                android:id="@+id/btnAlertSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ustawienia"
                android:layout_marginStart="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>
        
        <!-- Analysis Settings button row -->
        <Button
            android:id="@+id/btnAnalysisSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="⚙️ Ustawienia Analizy i Monitoringu"
            android:layout_marginBottom="8dp"
            android:textStyle="bold" />

        <!-- Fourth button row - STEALTH MODE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnStealthMode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🕵️ Tryb Ukryty"
                android:layout_marginEnd="4dp"
                android:background="?android:attr/colorAccent"
                android:textColor="@color/md_theme_light_onPrimary" />

            <Button
                android:id="@+id/btnStealthSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🎭 Konfiguracja"
                android:layout_marginStart="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

        <!-- DEMO MODE - Screen Monitoring -->
        <Button
            android:id="@+id/btnScreenMonitoringDemo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🖥️ DEMO: Rozpocznij Monitorowanie Ekranu"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:backgroundTint="@color/warning" />

        <!-- TEXT TO SPEECH - Screen Reader -->
        <Button
            android:id="@+id/btnScreenReader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="🔊 Czytaj Ekran Na Głos (30s)"
            android:layout_marginBottom="8dp"
            android:textStyle="bold"
            android:backgroundTint="@color/info" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
