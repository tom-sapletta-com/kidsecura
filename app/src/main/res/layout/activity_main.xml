<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_main"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_inactive"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnToggleMonitoring"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_start_monitoring"
        android:layout_marginTop="24dp"
        android:padding="11dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Recent Logs Preview Section - Wszystkie logi (monitoring + system) -->
        <TextView
            android:id="@+id/tvRecentLogsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="📊 Ostatnie wydarzenia (wszystkie)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginBottom="2dp" />

        <ScrollView
            android:id="@+id/scrollViewRecentLogs"
            android:layout_width="match_parent"
            android:layout_height="134dp"
            android:layout_marginBottom="16dp"
            android:background="@color/gray_900"
            android:padding="8dp"
            android:textColor="@color/white">

            <LinearLayout
                android:id="@+id/layoutRecentLogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNoLogs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/no_logs_yet"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:visibility="visible" />

            </LinearLayout>

        </ScrollView>

        <!-- First buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp">

            <Button
                android:id="@+id/btnViewLogs"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="📋 Logi"
                android:layout_marginEnd="1dp"
                android:textStyle="bold"
                android:backgroundTint="#4CAF50"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

            <Button
                android:id="@+id/btnKeywordsTester"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="🔍 Tester"
                android:layout_marginStart="1dp"
                android:textStyle="bold"
                android:backgroundTint="#9C27B0"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

        </LinearLayout>


        <!-- Network Scanner Row -->
        <Button
            android:id="@+id/btnNetworkScanner"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="🌐 Skanuj Sieć WiFi"
            android:layout_marginBottom="1dp"
            android:textStyle="bold"
            android:backgroundTint="#00BCD4"
            android:insetTop="0dp"
            android:insetBottom="0dp" />

                        <!-- First buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp">
            <!-- Demo Row -->
            <Button
                android:id="@+id/btnDetectionDemo"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="DEMO:DetSłówKl."
                android:layout_marginBottom="1dp"
                android:textStyle="bold"
                android:backgroundTint="#00BCD4"
                android:insetTop="0dp"
                android:insetBottom="0dp" />


            <!-- Analysis Settings button row -->
            <Button
                android:id="@+id/btnAnalysisSettings"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="⚙️ Ust.Anal.Mon."
                android:layout_marginBottom="-1dp"
                android:textStyle="bold"
                android:backgroundTint="#795546"
                android:insetTop="-2dp"
                android:insetBottom="-2dp" />
        </LinearLayout>

        <!-- Second button row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp">

            <Button
                android:id="@+id/btnManageDevices"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="📱 Urządzenia"
                android:layout_marginEnd="1dp"
                android:textStyle="bold"
                android:backgroundTint="#2196F3"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

            <Button
                android:id="@+id/btnViewIncidents"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="⚠️ Incydenty"
                android:layout_marginStart="1dp"
                android:textStyle="bold"
                android:backgroundTint="#F44336"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

        </LinearLayout>

        <!-- Third button row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp">

            <Button
                android:id="@+id/btnPairDevice"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="🔗 Sparuj"
                android:layout_marginEnd="1dp"
                android:textStyle="bold"
                android:backgroundTint="#00BCD4"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

            <Button
                android:id="@+id/btnAlertSettings"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="⚙️ Ustawienia"
                android:layout_marginStart="1dp"
                android:textStyle="bold"
                android:backgroundTint="#795548"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

        </LinearLayout>


        <!-- Fourth button row - STEALTH MODE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp">

            <Button
                android:id="@+id/btnStealthMode"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="🕵️ Tryb Ukryty"
                android:layout_marginEnd="1dp"
                android:textStyle="bold"
                android:backgroundTint="#673AB7"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

            <Button
                android:id="@+id/btnStealthSettings"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="🎭 Konfiguracja"
                android:layout_marginStart="1dp"
                android:textStyle="bold"
                android:backgroundTint="#E91E63"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp">
            <!-- DEMO MODE - Screen Monitoring -->
            <Button
                android:id="@+id/btnScreenMonitoringDemo"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="🖥️ DEMO:Mon.Ekr."
                android:layout_marginBottom="1dp"
                android:textStyle="bold"
                android:backgroundTint="#FF9800"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

            <!-- TEXT TO SPEECH - Screen Reader -->
            <Button
                android:id="@+id/btnScreenReader"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight="1"
                android:text="🔊 Screen Reader"
                android:layout_marginBottom="1dp"
                android:textStyle="bold"
                android:backgroundTint="#3F51B5"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="1dp">
            <!-- SCREEN READER SETTINGS -->
            <Button
                android:id="@+id/btnScreenReaderSettings"
                android:layout_width="0dp"
                android:layout_height="38dp"
                    android:layout_weight="1"

                android:text="⚙️ Ust.Scr.Read."
                android:layout_marginBottom="1dp"
                android:textStyle="bold"
                android:backgroundTint="#607D8B"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

            <!-- KEYWORD MONITORING -->
            <Button
                android:id="@+id/btnKeywordMonitoring"
                android:layout_width="0dp"
                android:layout_height="38dp"
                    android:layout_weight="1"

                android:text="🔍 Monit.Słow.10s"
                android:layout_marginBottom="1dp"
                android:textStyle="bold"
                android:backgroundTint="#D32F2F"
                android:insetTop="0dp"
                android:insetBottom="0dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
