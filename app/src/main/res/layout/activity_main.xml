<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_main"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/status_inactive"
        android:textSize="16sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnToggleMonitoring"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_start_monitoring"
        android:layout_marginTop="24dp"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvIntervalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/interval_label"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@id/btnToggleMonitoring"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvIntervalValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 sekund"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/tvIntervalLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <SeekBar
        android:id="@+id/seekBarInterval"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:min="1"
        android:max="10"
        android:progress="2"
        app:layout_constraintTop_toBottomOf="@id/tvIntervalLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSettingsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_label"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/seekBarInterval"
        app:layout_constraintStart_toStartOf="parent" />

    <Switch
        android:id="@+id/switchCropBottom"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/crop_bottom"
        android:layout_marginTop="12dp"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@id/tvSettingsLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Switch
        android:id="@+id/switchLocalAnalysis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/local_analysis"
        android:layout_marginTop="8dp"
        android:checked="true"
        app:layout_constraintTop_toBottomOf="@id/switchCropBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Switch
        android:id="@+id/switchSaveScreenshots"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/save_screenshots"
        android:layout_marginTop="8dp"
        android:checked="false"
        app:layout_constraintTop_toBottomOf="@id/switchLocalAnalysis"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Recent Logs Preview Section -->
        <TextView
            android:id="@+id/tvRecentLogsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recent_logs_title"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <ScrollView
            android:id="@+id/scrollViewRecentLogs"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/log_preview_background"
            android:padding="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:id="@+id/layoutRecentLogs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvNoLogs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/no_logs_yet"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"
                    android:gravity="center"
                    android:visibility="visible" />

            </LinearLayout>

        </ScrollView>

        <!-- First buttons row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnViewLogs"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_view_logs"
                android:layout_marginEnd="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <Button
                android:id="@+id/btnKeywordsEditor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_keywords_editor"
                android:layout_marginStart="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

        <!-- Second button row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnManageDevices"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="UrzÄ…dzenia"
                android:layout_marginEnd="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

            <Button
                android:id="@+id/btnViewIncidents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Incydenty"
                android:layout_marginStart="4dp"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

        <!-- Third button row -->
        <Button
            android:id="@+id/btnPairDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_pair_device"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
