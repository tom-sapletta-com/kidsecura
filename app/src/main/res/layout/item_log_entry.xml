<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/gray_900">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Header with timestamp and type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Type indicator -->
            <View
                android:id="@+id/viewTypeIndicator"
                android:layout_width="4dp"
                android:layout_height="24dp"
                android:layout_marginEnd="8dp"
                android:background="@color/success" />

            <!-- Type text -->
            <TextView
                android:id="@+id/tvLogType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALERT"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/success_light"
                android:layout_marginEnd="8dp" />

            <!-- Spacer -->
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <!-- Timestamp -->
            <TextView
                android:id="@+id/tvTimestamp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="17:52:15"
                android:textSize="12sp"
                android:textColor="@color/gray_400" />

        </LinearLayout>

        <!-- Main message -->
        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cyberprzemoc w WhatsApp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginBottom="4dp" />

        <!-- Full content (expandable) -->
        <TextView
            android:id="@+id/tvFullContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ALERT: Suspicious content detected..."
            android:textSize="12sp"
            android:textColor="@color/gray_400"
            android:fontFamily="monospace"
            android:maxLines="3"
            android:ellipsize="end"
            android:visibility="gone" />

        <!-- Expand/Collapse button -->
        <TextView
            android:id="@+id/tvExpandCollapse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/show_details"
            android:textSize="12sp"
            android:textColor="@color/info_light"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:padding="4dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
