<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_theme_light_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:spacing="16dp">

        <!-- Header with Back Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="←"
                android:textSize="24sp"
                android:textStyle="bold"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Powrót"
                style="@style/Widget.Material3.Button.IconButton" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="🔍 Tester Słów Kluczowych"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_light_onSurface"
                android:gravity="center" />

            <View
                android:layout_width="48dp"
                android:layout_height="48dp" />

        </LinearLayout>

        <!-- Test Input Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:layout_marginBottom="8dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🔍 Tekst do testowania"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_onSurface"
                    android:layout_marginBottom="8dp" />

                <EditText
                    android:id="@+id/testInput"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="top|start"
                    android:hint="Wprowadź tekst do analizy słów kluczowych..."
                    android:inputType="textMultiLine"
                    android:background="@drawable/edit_text_background"
                    android:padding="12dp"
                    android:textSize="14sp"
                    android:maxLines="6"
                    android:scrollbars="vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp">

                    <Button
                        android:id="@+id/resetTestButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🗑️ Wyczyść"
                        android:backgroundTint="@color/md_theme_light_secondary"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/exportResultsButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="📤 Eksportuj"
                        android:backgroundTint="@color/md_theme_light_tertiary"
                        android:layout_marginStart="8dp" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Results Section -->
        <LinearLayout
            android:id="@+id/resultContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📊 Wyniki analizy"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/md_theme_light_onSurface"
                        android:layout_marginBottom="12dp" />

                    <!-- Threat Level Display -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <ImageView
                            android:id="@+id/threatLevelIcon"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_safe"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:id="@+id/threatLevelText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="✅ BEZPIECZNY"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/status_safe" />

                    </LinearLayout>

                    <!-- Detected Keywords -->
                    <TextView
                        android:id="@+id/detectedKeywordsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🎯 Wykryte słowa: example1, example2"
                        android:textSize="14sp"
                        android:textColor="@color/md_theme_light_onSurface"
                        android:layout_marginBottom="8dp"
                        android:visibility="gone" />

                    <!-- Suggestions -->
                    <TextView
                        android:id="@+id/suggestionsText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="💡 Sugestie:\n• Przykład sugestii"
                        android:textSize="14sp"
                        android:textColor="@color/md_theme_light_onSurfaceVariant"
                        android:background="@drawable/suggestions_background"
                        android:padding="12dp"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Keywords Management Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="🔑 Słowa kluczowe"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/md_theme_light_onSurface" />

                    <Button
                        android:id="@+id/addKeywordButton"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="➕ Dodaj"
                        android:textSize="12sp"
                        android:backgroundTint="@color/md_theme_light_primary"
                        android:minWidth="0dp" />

                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/keywordsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/recyclerview_background"
                    android:padding="8dp" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
