<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/md_theme_light_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/md_theme_light_primary"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            android:contentDescription="Wstecz"
            android:tint="@color/md_theme_light_onPrimary" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="16dp"
            android:text="Incydenty Bezpieczeństwa"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_light_onPrimary" />

        <ImageButton
            android:id="@+id/btnFilter"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_filter_list"
            android:contentDescription="Filtry"
            android:tint="@color/md_theme_light_onPrimary" />

        <ImageButton
            android:id="@+id/btnRefresh"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_refresh"
            android:contentDescription="Odśwież"
            android:tint="@color/md_theme_light_onPrimary" />

    </LinearLayout>

    <!-- Statistics Panel -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/md_theme_light_surface"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:elevation="2dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Statystyki incydentów"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvTotalIncidents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#E91E63" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wszystkich"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvLast24h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FF5722" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ostatnie 24h"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvCriticalIncidents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#F44336" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Krytyczne"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvUnreviewed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#FF9800" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nieprzejrzane"
                    android:textSize="12sp"
                    android:textColor="#666666" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- Filter Panel (Initially Hidden) -->
    <LinearLayout
        android:id="@+id/layoutFilterPanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/md_theme_light_surface"
        android:padding="16dp"
        android:layout_marginBottom="8dp"
        android:elevation="1dp"
        android:visibility="gone">

        <!-- Severity Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Poziom zagrożenia:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/cbCritical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Krytyczny"
                android:textSize="12sp"
                android:checked="true" />

            <CheckBox
                android:id="@+id/cbHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wysoki"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:checked="true" />

            <CheckBox
                android:id="@+id/cbMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Średni"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:checked="true" />

            <CheckBox
                android:id="@+id/cbLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Niski"
                android:textSize="12sp"
                android:layout_marginStart="16dp"
                android:checked="false" />

        </LinearLayout>

        <!-- Time Range Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zakres czasowy:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerTimeRange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Device Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urządzenie:"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerDevice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Status Filter -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <CheckBox
                android:id="@+id/cbShowReviewed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pokaż przejrzane"
                android:textSize="12sp"
                android:checked="true" />

            <CheckBox
                android:id="@+id/cbShowUnreviewed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pokaż nieprzejrzane"
                android:textSize="12sp"
                android:checked="true" />

        </LinearLayout>

        <!-- Apply Filter Button -->
        <Button
            android:id="@+id/btnApplyFilters"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:text="Zastosuj filtry"
            android:textSize="14sp"
            android:background="@drawable/filter_button_selected"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <!-- Sort Controls -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:background="@color/md_theme_light_surface"
        android:layout_marginBottom="8dp"
        android:elevation="1dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sortuj:"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_gravity="center_vertical" />

        <Button
            android:id="@+id/btnSortTime"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="8dp"
            android:text="Czas"
            android:textSize="11sp"
            android:background="@drawable/filter_button_selected"
            android:textColor="@android:color/white"
            android:paddingHorizontal="12dp" />

        <Button
            android:id="@+id/btnSortSeverity"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="4dp"
            android:text="Waga"
            android:textSize="11sp"
            android:background="@drawable/filter_button_unselected"
            android:textColor="#666666"
            android:paddingHorizontal="12dp" />

        <Button
            android:id="@+id/btnSortDevice"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginStart="4dp"
            android:text="Urządzenie"
            android:textSize="11sp"
            android:background="@drawable/filter_button_unselected"
            android:textColor="#666666"
            android:paddingHorizontal="12dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/tvIncidentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 incydentów"
            android:textSize="12sp"
            android:textColor="#666666"
            android:layout_gravity="center_vertical" />

    </LinearLayout>

    <!-- Incidents List -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvIncidents"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layoutEmptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/ic_security"
            android:alpha="0.3"
            android:tint="#CCCCCC" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Brak incydentów"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#666666" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Nie wykryto żadnych problemów bezpieczeństwa"
            android:textSize="14sp"
            android:textColor="#999999"
            android:gravity="center" />

    </LinearLayout>

    <!-- Loading Indicator -->
    <LinearLayout
        android:id="@+id/layoutLoading"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:indeterminate="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Ładowanie incydentów..."
            android:textSize="14sp"
            android:textColor="#666666" />

    </LinearLayout>

</LinearLayout>
