<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="3dp"
    app:cardBackgroundColor="@color/gray_800">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Severity Indicator -->
            <View
                android:id="@+id/viewSeverityIndicator"
                android:layout_width="4dp"
                android:layout_height="40dp"
                android:background="#F44336"
                android:layout_marginEnd="12dp" />

            <!-- Device Info -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvDeviceName"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Samsung Galaxy S21"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:maxLines="1"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/tvSeverityLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KRYTYCZNY"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:background="@drawable/severity_critical_badge"
                        android:paddingHorizontal="6dp"
                        android:paddingVertical="2dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvTimestamp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dzisiaj o 14:23"
                    android:textSize="12sp"
                    android:textColor="@color/gray_400"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- Action Menu -->
            <ImageButton
                android:id="@+id/btnIncidentMenu"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_more_vert"
                android:contentDescription="Opcje"
                android:tint="@color/gray_500" />

        </LinearLayout>

        <!-- Detection Type and Confidence -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvDetectionType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Przemoc/Zagrożenie"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#E91E63" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pewność: "
                    android:textSize="11sp"
                    android:textColor="@color/gray_500" />

                <TextView
                    android:id="@+id/tvConfidence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="85%"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/gray_400" />

            </LinearLayout>

        </LinearLayout>

        <!-- Description -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wykryto słowa kluczowe: przemoc, krzywda, zagrożenie"
            android:textSize="13sp"
            android:textColor="#555555"
            android:layout_marginTop="8dp"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Keywords Chips -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:scrollbars="none">

            <LinearLayout
                android:id="@+id/layoutKeywords"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Keywords will be added dynamically -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="przemoc"
                    android:textSize="10sp"
                    android:textColor="@color/gray_400"
                    android:background="@drawable/keyword_chip"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="zagrożenie"
                    android:textSize="10sp"
                    android:textColor="@color/gray_400"
                    android:background="@drawable/keyword_chip"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:layout_marginEnd="4dp" />

            </LinearLayout>

        </HorizontalScrollView>

        <!-- Extracted Text Preview (Expandable) -->
        <LinearLayout
            android:id="@+id/layoutTextPreview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:background="@drawable/text_preview_background"
            android:padding="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wykryty tekst:"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/tvExtractedText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="To jest przykład wykrytego tekstu który zawiera słowa kluczowe..."
                android:textSize="12sp"
                android:textColor="#444444"
                android:layout_marginTop="4dp"
                android:maxLines="3"
                android:ellipsize="end" />

        </LinearLayout>

        <!-- Action Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp"
            android:paddingTop="8dp"
            android:background="@drawable/divider_top"
            android:gravity="center_vertical">

            <!-- Review Status -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivReviewStatus"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_visibility_off"
                    android:tint="#FF9800" />

                <TextView
                    android:id="@+id/tvReviewStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nieprzejrzane"
                    android:textSize="11sp"
                    android:textColor="#FF9800"
                    android:layout_marginStart="4dp" />

            </LinearLayout>

            <!-- Action Buttons -->
            <Button
                android:id="@+id/btnViewDetails"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Szczegóły"
                android:textSize="11sp"
                android:textColor="#2196F3"
                android:paddingHorizontal="12dp" />

            <Button
                android:id="@+id/btnMarkReviewed"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="Przejrzane"
                android:textSize="11sp"
                android:textColor="#4CAF50"
                android:paddingHorizontal="12dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
