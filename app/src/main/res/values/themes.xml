<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ============================================ -->
    <!-- MAIN APPLICATION THEME - HIGH CONTRAST      -->
    <!-- Material Design 3 with enhanced visibility  -->
    <!-- ============================================ -->
    
    <style name="Theme.ParentalControl" parent="Theme.Material3.DayNight">
        <!-- === PRIMARY COLORS === -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        
        <!-- === SECONDARY COLORS === -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        
        <!-- === TERTIARY COLORS === -->
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        
        <!-- === ERROR COLORS === -->
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        
        <!-- === BACKGROUND === -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        
        <!-- === SURFACE === -->
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        
        <!-- === OUTLINE === -->
        <item name="colorOutline">@color/md_theme_light_outline</item>
        
        <!-- === STATUS & NAVIGATION BAR === -->
        <item name="android:statusBarColor">@color/md_theme_light_primary</item>
        <item name="android:navigationBarColor">@color/md_theme_light_surface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>
        
        <!-- === WINDOW === -->
        <item name="android:windowBackground">@color/md_theme_light_background</item>
        <item name="android:windowContentTransitions">true</item>
        
        <!-- === TEXT APPEARANCE === -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        
        <!-- === BUTTON & INPUT STYLES === -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        
        <!-- === CARD === -->
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
    </style>
    
    <!-- ============================================ -->
    <!-- VARIANT THEMES                              -->
    <!-- ============================================ -->
    
    <!-- Theme without ActionBar -->
    <style name="Theme.ParentalControl.NoActionBar" parent="Theme.ParentalControl">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Fullscreen theme -->
    <style name="Theme.ParentalControl.Fullscreen" parent="Theme.ParentalControl.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- ============================================ -->
    <!-- CUSTOM WIDGETS - HIGH CONTRAST              -->
    <!-- ============================================ -->
    
    <!-- Enhanced Button -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/md_theme_light_primary</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="cornerRadius">8dp</item>
        <item name="elevation">2dp</item>
    </style>
    
    <!-- Outlined Button -->
    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="strokeColor">@color/md_theme_light_primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Text Input Layout -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/md_theme_light_primary</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:textColorHint">@color/text_secondary</item>
        <item name="hintTextColor">@color/md_theme_light_primary</item>
    </style>
    
    <!-- Switch -->
    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/white</item>
        <item name="trackTint">@color/md_theme_light_primary</item>
        <item name="trackDecorationTint">@color/md_theme_light_primaryContainer</item>
    </style>
    
    <!-- Card View -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardBackgroundColor">@color/md_theme_light_surface</item>
        <item name="strokeColor">@color/md_theme_light_outline</item>
        <item name="strokeWidth">1dp</item>
    </style>
    
    <!-- Divider -->
    <style name="Widget.App.Divider" parent="Widget.Material3.MaterialDivider">
        <item name="dividerColor">@color/md_theme_light_outline</item>
        <item name="dividerThickness">1dp</item>
    </style>
    
</resources>
